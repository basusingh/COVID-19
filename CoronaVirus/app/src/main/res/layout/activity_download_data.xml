<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content_container"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:paddingStart="15dp"
    android:background="@drawable/home_background_gradient"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp">



    <RelativeLayout android:id="@+id/component_2___1"
        android:layout_marginTop="26dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View android:id="@+id/rectangle_3"
            android:background="@drawable/rectangle_3_shape"
            android:alpha="0.23999999463558"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="83dp"
            android:layout_height="319dp" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/component_3___1"
        android:layout_marginTop="102dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View android:id="@+id/rectangle_4"
            android:background="@drawable/rectangle_4_shape"
            android:alpha="0.25999999046326"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="83dp"
            android:layout_height="319dp" />

    </RelativeLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/corona_small"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/top_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/top_image"
        android:id="@+id/title"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="center_horizontal"
        android:text="Please wait!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/blue_grey"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:id="@+id/subtitile"
        android:layout_gravity="center_horizontal"
        android:text="While we configure the app."/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subtitile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

</RelativeLayout>